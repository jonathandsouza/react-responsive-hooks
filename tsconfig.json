{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"*": ["src/*"]
		},
		"types": ["react", "react-dom", "node", "jest"]
	},
	"include": ["src/**/*", "_tests_"], // Add at least one input file or directory
	"exclude": ["node_modules", "dist"],
	"peerDependencies": {
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0"
	}
}
